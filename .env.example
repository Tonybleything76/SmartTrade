# Multi-Agent AI Content System Environment Configuration
# Copy this file to .env and fill in your API keys

# Required API Keys
OPENAI_API_KEY=your_openai_api_key_here
SERPAPI_API_KEY=your_serpapi_key_here

# Optional API Keys (for publishing features)
LINKEDIN_ACCESS_TOKEN=your_linkedin_token_here

# System Configuration
FLASK_ENV=production
LOG_LEVEL=INFO
LOG_FILE=logs/system.log

# Port Configuration (default: 5000)
PORT=5000

# Content Generation Settings
CONTENT_GENERATION_SCHEDULE=daily
DEFAULT_TIMEZONE=UTC

# Database (if needed for persistence)
# DATABASE_URL=sqlite:///data/content_system.db